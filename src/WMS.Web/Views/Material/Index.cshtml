@model List<WMS.Application.DTOs.MaterialDto>
@{
    ViewData["Title"] = "物料管理";
}

<div class="page-container">
    <div class="page-header-section">
        <div class="page-title-wrapper">
            <h2 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 8px; vertical-align: middle;">
                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5M2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                </svg>
                物料管理
            </h2>
            <p class="page-subtitle">管理物料主数据信息</p>
        </div>
        <a href="@Url.Action("Create", "Material")" class="btn-add" data-permission="Material:Add" data-permission-action="hide">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 4px;">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
            </svg>
            新增物料
        </a>
    </div>

    <div class="card-modern">
        <div class="table-responsive">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>物料编码</th>
                        <th>物料名称</th>
                        <th>规格型号</th>
                        <th>物料类型</th>
                        <th>条码类型</th>
                        <th>基本单位</th>
                        <th>状态</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var material in Model)
                        {
                            <tr>
                                <td>@material.Id</td>
                                <td>
                                    <span class="code-badge">@material.Code</span>
                                </td>
                                <td>
                                    <div class="user-info">
                                        <span class="user-name">@material.Name</span>
                                    </div>
                                </td>
                                <td>@(material.Specification ?? "-")</td>
                                <td>
                                    @{
                                        var materialTypeText = material.MaterialType switch
                                        {
                                            0 => "原料",
                                            1 => "半成品",
                                            2 => "成品",
                                            3 => "备品备件",
                                            _ => "未知"
                                        };
                                    }
                                    <span class="badge-status @(material.MaterialType == 0 ? "badge-primary" : material.MaterialType == 1 ? "badge-info" : material.MaterialType == 2 ? "badge-success" : "badge-warning")">
                                        @materialTypeText
                                    </span>
                                </td>
                                <td>
                                    @{
                                        var barcodeTypeText = material.BarcodeType switch
                                        {
                                            0 => "单码",
                                            1 => "批次码",
                                            2 => "序列号",
                                            _ => "未知"
                                        };
                                    }
                                    <span class="badge-status badge-secondary">@barcodeTypeText</span>
                                </td>
                                <td>@material.BaseUnit</td>
                                <td>
                                    @if (material.IsEnabled)
                                    {
                                        <span class="badge-status badge-success">
                                            <span class="badge-dot"></span>
                                            启用
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-status badge-danger">
                                            <span class="badge-dot"></span>
                                            禁用
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Edit", "Material", new { id = material.Id })" class="btn-action btn-edit" data-permission="Material:Edit" data-permission-action="hide">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                            </svg>
                                            编辑
                                        </a>
                                        <button class="btn-action btn-delete" onclick="deleteMaterial(@material.Id)" data-permission="Material:Delete" data-permission-action="hide">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                            </svg>
                                            删除
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16" style="opacity: 0.3; margin-bottom: 1rem;">
                                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5M2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                                </svg>
                                <p>暂无物料数据</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<script>
function deleteMaterial(id) {
    if (confirm('确定要删除该物料吗？删除后无法恢复。')) {
        const form = document.getElementById('deleteForm');
        form.action = '@Url.Action("Delete", "Material")/' + id;
        form.submit();
    }
}
</script>


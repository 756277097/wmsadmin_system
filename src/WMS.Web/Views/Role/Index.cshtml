@model List<WMS.Application.DTOs.RoleDto>
@{
    ViewData["Title"] = "角色管理";
}

<div class="page-container">
    <div class="page-header-section">
        <div class="page-title-wrapper">
            <h2 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 8px; vertical-align: middle;">
                    <path d="M8 5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3M4.5 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0"/>
                    <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm6.443 1.991a1 1 0 1 0-.895.553 1 1 0 0 0 .895-.553M11 6.5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m-2.97 1.36a.5.5 0 0 0-.196.04l-.5 2a.5.5 0 0 0 .196.96h1.5a.5.5 0 0 0 .196-.96l-.5-2a.5.5 0 0 0-.196-.04m-1.026 3.136a.5.5 0 0 0-.272.133l-.75.75a.5.5 0 0 0 .707.707l.75-.75a.5.5 0 0 0-.136-.843m-2.0 0a.5.5 0 0 0-.272.133l-.75.75a.5.5 0 0 0 .707.707l.75-.75a.5.5 0 0 0-.136-.843M5.5 12a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5zm4.5 0a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5z"/>
                </svg>
                角色管理
            </h2>
            <p class="page-subtitle">管理系统角色和权限配置</p>
        </div>
        <a href="@Url.Action("Create", "Role")" class="btn-add" data-permission="Role:Add" data-permission-action="hide">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 4px;">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
            </svg>
            新增角色
        </a>
    </div>

    <div class="card-modern">
        <div class="table-responsive">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>角色名称</th>
                        <th>角色编码</th>
                        <th>描述</th>
                        <th>状态</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>
                                    <div class="user-info">
                                        <span class="user-name">@role.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="code-badge">@role.Code</span>
                                </td>
                                <td>@(role.Description ?? "-")</td>
                                <td>
                                    @if (role.IsEnabled)
                                    {
                                        <span class="badge-status badge-success">
                                            <span class="badge-dot"></span>
                                            启用
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-status badge-danger">
                                            <span class="badge-dot"></span>
                                            禁用
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Edit", "Role", new { id = role.Id })" class="btn-action btn-edit" data-permission="Role:Edit" data-permission-action="hide">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                            </svg>
                                            编辑
                                        </a>
                                        <button class="btn-action btn-delete" onclick="deleteRole(@role.Id)" data-permission="Role:Delete" data-permission-action="hide">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                            </svg>
                                            删除
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16" style="opacity: 0.3; margin-bottom: 1rem;">
                                    <path d="M8 5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3M4.5 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0"/>
                                    <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm6.443 1.991a1 1 0 1 0-.895.553 1 1 0 0 0 .895-.553M11 6.5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m-2.97 1.36a.5.5 0 0 0-.196.04l-.5 2a.5.5 0 0 0 .196.96h1.5a.5.5 0 0 0 .196-.96l-.5-2a.5.5 0 0 0-.196-.04m-1.026 3.136a.5.5 0 0 0-.272.133l-.75.75a.5.5 0 0 0 .707.707l.75-.75a.5.5 0 0 0-.136-.843m-2.0 0a.5.5 0 0 0-.272.133l-.75.75a.5.5 0 0 0 .707.707l.75-.75a.5.5 0 0 0-.136-.843M5.5 12a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5zm4.5 0a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5z"/>
                                </svg>
                                <p>暂无角色数据</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<script>
function deleteRole(id) {
    if (confirm('确定要删除该角色吗？删除后无法恢复。')) {
        const form = document.getElementById('deleteForm');
        form.action = '@Url.Action("Delete", "Role")/' + id;
        form.submit();
    }
}
</script>


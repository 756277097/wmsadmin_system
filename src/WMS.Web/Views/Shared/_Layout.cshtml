<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WMS管理系统</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- 左侧菜单 -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <button class="sidebar-toggle" id="sidebarToggle" aria-label="收缩/展开菜单">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                    </svg>
                </button>
                <div class="position-sticky">
                    <div class="text-center">
                        <div class="sidebar-header">
                            <div class="sidebar-logo">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z"/>
                                </svg>
                            </div>
                            <h4>WMS管理系统</h4>
                            <small>@(Context.Session.GetString("RealName") ?? "用户")</small>
                        </div>
                    </div>
                    <ul id="menuTree" class="nav flex-column">
                        <!-- 菜单树将通过JS动态加载 -->
                    </ul>
                </div>
            </nav>

            <!-- 右侧内容区域 -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="page-header">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                    <div class="page-actions">
                        <a href="@Url.Action("Logout", "Auth")" class="btn-logout">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 4px;">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z"/>
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                            </svg>
                            退出登录
                        </a>
                    </div>
                </div>
                <div id="contentArea" style="position: relative; width: 100%; height: calc(100vh - 200px);">
                    <!-- 初始显示首页内容，点击菜单后会被iframe替换 -->
                    <div id="initialContent">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- 注入菜单和权限数据 -->
    <script id="menuData" type="application/json">@Html.Raw(Context.Session.GetString("UserMenus") ?? "[]")</script>
    <script id="permissionData" type="application/json">@Html.Raw(Context.Session.GetString("UserPermissions") ?? "[]")</script>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/menu.js"></script>
    <script src="~/js/permission.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

